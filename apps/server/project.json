{
  "name": "server",
  "projectType": "application",
  "sourceRoot": "apps/server",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node index.js",
        "cwd": "apps/server"
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "defaultConfiguration": "local",
      "options": {
        "tags": ["ghcr.io/dostapovets/mono-skaffold-nx-server:latest"]
      },
      "configurations": {
        "development": {
          "push": false,
          "target": "development"
        },
        "production": {
          "push": true,
          "target": "production"
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --watch index.js",
        "cwd": "apps/server"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "trackDeps": true,
        "push": true,
        "postTargets": ["container", "github"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    }
  },
  "tags": []
}